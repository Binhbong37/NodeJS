<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <h2>Tổng giờ làm hôm nay: <%= totalTime %></h2>
            <hr />
            <div class="orders">
                    <% if (result.length > 0) { %>
                        <% for (let prod of result) { %>
                    <div class="orders__item">
                        <h3>Số giờ đã làm: <%= prod.total %></h3>
                        <ul class="orders__products">
                            <li class="orders__products-item">Giờ vào: <%= prod.startTime %></li>
                            <li class="orders__products-item">Giờ kết thúc:<%= prod.endTime %></li>
                            <li class="orders__products-item">Địa điểm làm việc:<%= prod.place %></li>
                        </ul>
                    </div>
                    <% } %>
                </div>
            <% } else { %>
                <h1>No Products Found!</h1>
                <% } %>      
        </main>
        <%- include('../includes/end.ejs') %>