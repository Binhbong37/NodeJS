<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% for (let prod of result) { %>
        <div class="grid">
                <div class="card__actions">
                    <% if(prod.status) { %>
                        <form method="POST" action="/check-out">
                            <input type="hidden" name="idCh" value="<%= prod.id %>">
                            <h1><button type="submit" class="btn">
                                KẾT THÚC
                            </button></h1>
                        </form>
                    <% } else { %>
                        <h1><a href="/xac-nhan-lam-viec" class="btn">ĐIỂM DANH</a></h1>
                    <% } %>
                </div>
            
            <div class="card__actions">
                <h1><a href="/xin-nghi-phep" class="btn">NGHỈ PHÉP</a></h1>
            </div>
        </div>
        <% if(prod.status) { %>
            <div>
                <h2>StartTime: <%= prod.startTime %></h2>
                <h2>Place: <%= prod.place %></h2>
                <h2>Active:</h2>
            </div>
        <% } %>

        <% } %>
    </main>
    
<%- include('../includes/end.ejs') %>