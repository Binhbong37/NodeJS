<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/covid.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <form action="/post-covid" method="post">
                <div class="grid">
                        <div class="card covid">
                            <h2>Thông tin thân nhiệt</h2>
                            <div class="covid_input">
                                <label class="">Nhiệt độ</label>
                                <input type="number" name="nhietdo" step="0.01"/>
                            </div>
                            <div class="covid_input">
                                <label class="">Giờ đo</label>
                                <input type="time" name="giodonhietdo"/>
                            </div>
                            <div class="covid_input">
                                <label class="">Ngày đo</label>
                                <input type="date" name="ngaydonhietdo"/>
                            </div>
                        </div>
                        <div class="card covid">
                            <h2>Thông tin Vacxin</h2>
                            <div class="covid_input">
                                <label class="">Loại Vacxin (Mũi 1)</label>
                                <input type="text" name="mui1"/>
                            </div>
                            <div class="covid_input">
                                <label class="">Ngày tiêm</label>
                                <input type="date" name="ngaytiem1"/>
                            </div>
                            <div class="covid_input">
                                <label class="">Loại Vacxin (Mũi 2)</label>
                                <input type="text" name="mui2"/>
                            </div>
                            <div class="covid_input">
                                <label class="">Ngày tiêm</label>
                                <input type="date" name="ngaytiem2"/>
                            </div>
                        </div>
                        <div class="card covid">
                            <h2>Thông tin dương tính</h2>
                            <div class="covid_input">
                                <label class="">Ngày dương tính</label>
                                <input type="date" name="duongtinh"/>
                            </div>
                            <div class="covid_input">
                                <label class="">Ngày khỏi</label>
                                <input type="date" name="amtinh"/>
                            </div>
                        </div>
                </div>
                <div class="card__actions">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                    <h1><button type="submit" class="btn">Xác nhận</button></h1>
                </div>
            </form>
            <% if(isAuthen1) { %>
                <div class="card__actions">
                    <h2>Kết quả covid của nhân viên</h2>
                    <table>
                        <tr>
                            <th rowspan="2" style="width: 20%;">Họ và tên</th>
                            <th colspan="3">Nhiệt độ</th>
                            <th colspan="4" style="width: 30%;">vacxin</th>
                            <th colspan="2">Covid</th>
                            <th rowspan="2"></th>
                        </tr>
                        <tr>
                            <td>Ngày đo</td>
                            <td>Giờ đo</td>
                            <td>Kết quả</td>
                            <td>Mũi 1</td>
                            <td>ngày tiêm</td>
                            <td>Mũi 2</td>
                            <td>Ngày tiêm</td>
                            <td>Ngày nhiễm</td>
                            <td>Ngày khỏi</td>
                        </tr>
                        <tr>
                            <td><%= name %></td>
                            <% for( let inf of nhietDo) { %>
                            <td><%= new Date(inf.ngay_do).getDate() %> - <%= new Date(inf.ngay_do).getMonth() + 1 %></td>
                            <td><%= inf.gio_do %></td>
                            <td><%= inf.nhiet_do %></td>
                            <% } %>
                            <% for( let inf of muiTiem) { %>
                                <td><%= inf.mui_1 %></td>
                                <td><%= new Date(inf.ngay_tiem_mui_1).getDate() %> - <%= new Date(inf.ngay_tiem_mui_1).getMonth() + 1 %></td>
                                <td><%= inf.mui_2 %></td>
                                <td><%= new Date(inf.ngay_tiem_mui_2).getDate() %> - <%= new Date(inf.ngay_tiem_mui_2).getMonth() + 1 %></td>
                            <% } %>
                            <td>1</td>
                            <td>1</td>
                            <td>
                               <a href="/covid/<%= _id %>" >Xuất PDF</a>
                            </td>
                        </tr>
                    </table>   
                </div>
                <% } %>
            </main>
            <%- include('../includes/end.ejs') %>