<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if( information.length > 0) { %>
        <form class="product-form" action="/active-name" method="POST">
            <% for(let inf of information) { %>
            <div class="form-control">
                <label for="name"><h2>Họ và tên</h2></label>
                <input type="text" name="name" id="name" value="<%= inf.name %>">
            </div>
            <div class="form-control">
                <label for="place"><h2>Nơi làm việc</h2></label>
                <select style="width: 100%; height: 25px;">
                    <option value="1">Công ty</option>
                    <option value="2">Nhà</option>
                    <option value="3">Khách hàng</option>
                </select>
            </div>
            <button class="btn" type="submit">Xác nhận</button>
            <% } %>
        </form>
        <% } else { %>
            <div>
                Khong co nguoi nao ca
            </div>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>