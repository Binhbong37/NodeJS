<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="product-form" action="/xin-nghi-phep" method="POST">
            <div class="form-control">
                <label for="title">Ngày nghỉ</label>
                <input type="date" name="dayOff" id="title">
            </div>
            <div class="form-control">
                <label for="imageUrl">Số giờ nghỉ (tối đa là 8h)</label>
                <input type="number" name="hourOff" id="imageUrl" max="8" min="0" step="0.5">
            </div>
            <div class="form-control">
                <label for="description">Lý Do</label>
                <textarea name="reason" id="description" rows="5"></textarea>
            </div>
            <div class="form-control">
                <label for="price">Số ngày nghỉ còn lại ( ngày )</label>
                <input type="number" name="price" value="<%= staff.annualLeave %>" disabled>
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <button class="btn" type="submit">Xác nhận</button>
        </form>
    </main>
    
</body>

</html>